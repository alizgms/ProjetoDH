<body>
  <header>
    <div class="logo">
      <a href="/">SHOEFIE</a>
    </div>
    <div class="icons">
      <a href="/pedidos/shipping">
        <img src="../media/icons/truck.svg" alt="Acompanhar envio" />
      </a>
      <a href="/usuarios/profile">
        <img src="../media/icons/user.svg" alt="Perfil" />
      </a>
      <a href="/carrinho">
        <img src="../media/icons/shopping-bag.svg" alt="Carrinho de compras" />
      </a>
      <a href="/usuarios/logoff">
        <img src="../media/icons/log-out.svg" alt="Logout" />
      </a>
    </div>
  </header>

  <section class="menu">
    <nav>
      <a href="">LANÃ‡AMENTOS</a>
      <a href="">OFERTAS</a>
      <a href="">MASCULINO</a>
      <a href="">FEMININO</a>
      <a href="">INFANTIL</a>
    </nav>
  </section>

  <div class="carrossel">
    <h1 class="titulo-carrossel">Feminino</h1>
    <div class="owl-carousel owl-theme">
      <% for (let products of listProducts) { %>
        <% if (products.id===1) { %>
          <% for (let i=0; i < products.produtos.length; i++) { %>
            <a>
              <div class="item">
                <img src="<%= products.produtos[i].imagem %> " />
                <p>
                  <%=products.produtos[i].nome %>
                </p>
                <h5>
                  <%=products.produtos[i].preco %>
                </h5>
              </div>
              <button
                onclick="addItemCarrinho('<%= products.produtos[i].id%>', '<%=products.produtos[i].nome%>', '<%=products.produtos[i].preco%>', '<%=products.produtos[i].imagem%>')"
                id="btn-comprar">
                Comprar
              </button>
            </a>
            <% }%>
              <%}%>
                <% } %>
    </div>

    <h1 class="titulo-carrossel">Masculino</h1>
    <div class="owl-carousel owl-theme">
      <% for (let products of listProducts) { %>
        <% if (products.id===2) { %>
          <% for (let i=0; i < products.produtos.length; i++) { %>
            <a href="">
              <div class="item">
                <img src="<%= products.produtos[i].imagem %> " />
                <p>
                  <%=products.produtos[i].nome %>
                </p>
                <h5>
                  <%=products.produtos[i].preco %>
                </h5>
              </div>
              <button
                onclick="addItemCarrinho('<%= products.produtos[i].id%>', '<%=products.produtos[i].nome%>', '<%=products.produtos[i].preco%>',  '<%=products.produtos[i].imagem%>')"
                id="btn-comprar">
                Comprar
              </button>
            </a>
            <% }%>
              <%}%>
                <% } %>
    </div>

    <h1 class="titulo-carrossel">Infantil</h1>
    <div class="owl-carousel owl-theme">
      <% for (let products of listProducts) { %>
        <% if (products.id===3) { %>
          <% for (let i=0; i < products.produtos.length; i++) { %>
            <a href="">
              <div class="item">
                <img src="<%= products.produtos[i].imagem %> " />
                <p>
                  <%=products.produtos[i].nome %>
                </p>
                <h5>
                  <%=products.produtos[i].preco %>
                </h5>
              </div>
              <button
                onclick="addItemCarrinho('<%= products.produtos[i].id%>', '<%=products.produtos[i].nome%>', '<%=products.produtos[i].preco%>', '<%=products.produtos[i].imagem%>')"
                id="btn-comprar">
                Comprar
              </button>
            </a>
            <% }%>
              <%}%>
                <% } %>
    </div>
  </div>

  <script>
    function addItemCarrinho(id, nome, preco, imagem) {
      // console.log(id, nome, preco);
      let produtos = localStorage.getItem('carrinho');
      if (produtos) {
        console.log(JSON.parse(produtos));
        let produtoCarrinho = JSON.parse(produtos);
        produtoCarrinho.produtos.push({ id, nome, preco, imagem });
        localStorage.setItem('carrinho', JSON.stringify(produtoCarrinho));
      } else {
        const carrinho = {
          usuario_id: 1,
          produtos: [{ id, nome, preco, imagem }],
        };
        localStorage.setItem('carrinho', JSON.stringify(carrinho));
      }
    }
    </script>

    <script>
      function logoff() {
        localStorage.clear();
      }
    </script>
